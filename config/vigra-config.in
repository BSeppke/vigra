#!/bin/sh

prefix="@prefix@"
exec_prefix="@exec_prefix@"

usage()
{
    cat <<EOF
Usage: $0 [OPTIONS]
Options:
    [--version]
    [--libs]
    [--cxxflags]
EOF
    exit $1
}

if test $# -eq 0; then
    usage 1 1>&2
fi

while test $# -gt 0; do
  case $1 in
    --version)
      echo @MAJOR_VERSION@.@MINOR_VERSION@.@MICRO_VERSION@
      ;;
    --cxxflags)
      echo "@CXXINCLUDES@" \
        | sed "s,\$(prefix),@prefix@,"
      ;;
    --libs)
      echo "@LIBS@" \
        | sed "s,\$(exec_prefix),@exec_prefix@," \
        | sed "s,\$(prefix),@prefix@,"
      ;;
    *)
      usage 1 1>&2
      ;;
  esac
  shift
done
